            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.hubrox.hubroxpayment.PaymentsActivity"
            android:label="@string/title_activity_payments"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.hubrox.hubroxpayment.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.hubrox.hubroxpayment.ItemsActivity"
            android:label="@string/title_activity_items"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>